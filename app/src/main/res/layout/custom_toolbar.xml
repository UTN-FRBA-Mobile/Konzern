<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/vCustomToolbarLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/konzern"
        android:contentDescription="@string/custom_toolbar_logo_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/vCustomToolbarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="@id/vCustomToolbarLogo"
        app:layout_constraintStart_toEndOf="@id/vCustomToolbarLogo"
        app:layout_constraintBottom_toBottomOf="@id/vCustomToolbarLogo"
        tools:text="Konzern"/>

    <ImageView
        android:id="@+id/vCustomToolbarDotsMore"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/dots_more"
        android:contentDescription="@string/custom_toolbar_dots_img"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/vCustomToolbarLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/vCustomToolbarLogo"/>

</androidx.constraintlayout.widget.ConstraintLayout>